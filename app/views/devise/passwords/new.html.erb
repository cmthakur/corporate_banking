 <div class="container">
  <div class="content">
    <h3 class="login_title">Forgot your password?</h3>
    <div class="row">
      <div class="login-form">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
          <div class="clearfix"><%= f.label :email %>
           <%= f.email_field :email, :autofocus => true %>
         </div>
         <div><%= f.submit "Send Instructions", :class => "btn btn-primary" %></div>
         <% end %>
         <%= render "devise/shared/links" %>
       </div>
     </div>
   </div>
 </div>