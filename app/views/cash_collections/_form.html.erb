<div class="box_show" >
  <%= form_for @collection, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account_number, :class => 'control-label' %>
    <div class="controls">
       <%= f.text_field :account_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :collection_type, :class => 'control-label' %>
    <div class="controls">
      <%= select("collecton_type", "type", [["Debit", "debit"],["Credit", "credit"]]) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :received_on, :class => 'control-label' %>
    <div class="controls">
       <%= f.text_field :received_on, :class => 'text_field','data-behaviour' => 'datepicker', :value => Date.today %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field', :rows => 3 %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit "collect", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    cash_collections_path, :class => 'btn' %>
  </div>
  <% end %>
</div>