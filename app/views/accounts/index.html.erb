<%= link_to "Add New Account", new_account_path, :class => 'btn btn-primary pull-right' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Account No.</th>
      <th>Created At</th>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Status</th>
      <th>Balance</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= link_to account.id, account_path(account) %></td>
        <td><%= account.created_at.strftime("%b %d, %Y") %></td>
        <td><%= account.name %></td>
        <td><%= account.email %></td>
        <td><%= account.type %></td>
        <td><%= account.status %></td>
        <td><%= account.balance.amount %></td>
        <td>
          <%= link_to "Delete",
                      account_path(account),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>

          <% if account.locked? %>
            <%= link_to "Unlock", unlock_account_path(account), :class => 'btn btn-mini btn-action' %>
          <% else %>
            <%= link_to "Lock", lock_account_path(account), :class => 'btn btn-mini btn-action' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>